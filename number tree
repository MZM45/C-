#include <iostream>  
using namespace std;
void main()
{
    char ch = '1';
    int i, j, k, m;
    i = 1;
    while (i <= 5)
    {
        int j = 0;
        while (j <= 5 - i)
{
            cout << " ";
            j++;
        }
        int k = i;
        while (k >= 1)
        {
            cout << k;
            k--;
        }
        k = 2;
        while (k <= i)
        {
            cout << k;
            k++;
        }
        i++;
        cout << endl;
    }
    system("pause");
}
