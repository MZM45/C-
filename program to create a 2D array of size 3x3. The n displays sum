: #include <iostream>
using namespace std;
void main(){
	int arr[3][3];
	int sum=0;
	cout<<"Enter the elements of array: \n";
	for(int i=0;i<3;i++)
	{for(int j=0;j<3;j++){
		cin>>arr[i][j];}}

	for(int i=0;i<3;i++)
	{
		for(int j=0;j<3;j++)
	{
		cout<<arr[i][j];
	cout<<"  ";
		}
	cout<<endl;
	} 
	for(int i=0;i<3;i++)
	{ for(int j=0;j<3;j++)
	{sum=sum+arr[i][j];}
	cout<<"Sum of Elemets on "<<i+1<<"Row is: "<<sum;
	sum=0;
	cout<<endl;
	}
	cout<<endl;
system("pause");
}
